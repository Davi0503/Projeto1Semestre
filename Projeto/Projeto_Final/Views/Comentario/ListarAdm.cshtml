@using Projeto_Final.Models;
@using Microsoft.AspNetCore.Http;
 @{
    ViewBag.Title = "Depoimentos";
    Layout = "Depoimentos";
    }
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Comentarios</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>

<body>

        @foreach (var item in ViewData["banana"] as List<ComentarioModel>)
        {
            if(item.Aprovado == false && item.Ativo == true){
        <table>
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.DataCriacao
                </td>
                <td>
                    @item.Usuario.Nome
                </td>
                <td>
                    @item.Texto
                </td> 
                <td>
                    <a href="/Comentario/Aprovar?id=@item.Id">Aprovar</a>
                    <a href="/Comentario/Rejeitar?id=@item.Id">Rejeitar</a>
                    
                </td>              

            </tr>


        </table>
            }
        }

        <a href="/Comentario/ListarDeslog" >Voltar para depoimentos</a>

</body>

</html>